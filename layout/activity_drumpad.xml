<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drumpad"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drum Pad"
        android:textColor="#fff"
        android:textSize="45sp"
        android:layout_marginBottom="60dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/blue_button"
            android:id="@+id/playsound1"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/blue_button"
            android:id="@+id/playsound2"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/blue_button"
            android:id="@+id/playsound3"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/purple_button"
            android:id="@+id/playsound4"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/orange_button"
            android:id="@+id/playsound5"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/pink_button"
            android:id="@+id/playsound6"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/green_button"
            android:id="@+id/playsound7"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/green_button"
            android:id="@+id/playsound8"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/pink_button"
            android:id="@+id/playsound9"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>




</LinearLayout>